<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <AssemblyName>Apps72.Dev.Data.Generator.Tools</AssemblyName>
    <RootNamespace>Apps72.Dev.Data.Generator.Tools</RootNamespace>    
    <ApplicationIcon />
    <StartupObject></StartupObject>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>DbCmd</ToolCommandName>
    <PackageOutputPath>bin/nupkgs</PackageOutputPath>
    <Version>2.6.0</Version>
    <Company>Apps72</Company>
    <Authors>Denis Voituron</Authors>
    <Description>Tools to generate entities (class) from existing database (SQL Server, Oracle or SQLite).</Description>
    <PackageProjectUrl>https://github.com/Apps72/Dev.Data</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Apps72/Dev.Data</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite.Core" Version="2.1.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Src\Core\Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Oracle.ManagedDataAccess">
      <HintPath>Oracle.ManagedDataAccess.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="Oracle.ManagedDataAccess.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
